<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">
      <% include ../static/partials/messages.ejs %>
      <a href="/wikis" class="btn btn-primary">Back to All</a>
      <hr />
      <h1><%= wiki.title %></h1>
      <% if(currentUser && currentUser.id == wiki.userId && wiki.private ==
      true) { %>
      <a href="/wikis/<%= wiki.id %>/collaborators" class="btn btn-info"
        >Collaborators</a
      >
      <% } %> <% if((currentUser && currentUser.role == 1) || (currentUser &&
      currentUser.role == 2)) { if(wiki.private == true) { %>

      <form
        style="display:initial"
        action="/wikis/<%= wiki.id %>/makePublic"
        method="post"
      >
        <button type="submit" class="btn btn-info">Make Public</button>
      </form>
      <% } else if(wiki.private == false) { %>

      <form
        style="display:initial"
        action="/wikis/<%= wiki.id %>/makePrivate"
        method="post"
      >
        <button type="submit" class="btn btn-info">Make Private</button>
      </form>
      <% } } %>
      <p class="text-muted">
        User ID <%= wiki.userId %>, <% if(wiki.private == false) { %> public
        wiki (Everyone can view) <% } else { %> private wiki (Only you can view)
        <% } %> <br />Last updated <%= wiki.updatedAt %>
      </p>

      <hr />

      <div class="jumbotron">
        <p><%- wiki.body %></p>
      </div>

      <a href="/wikis/<%= wiki.id %>/edit" class="btn btn-warning">Edit</a>
      <form
        style="display:initial"
        action="/wikis/<%= wiki.id %>/destroy"
        method="post"
      >
        <button type="submit" class="btn btn-danger">Delete</button>
      </form>
    </main>

    <% include ../static/partials/baseScripts.ejs %>
  </body>
</html>
