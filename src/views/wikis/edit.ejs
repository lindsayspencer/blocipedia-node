<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">
      <% include ../static/partials/messages.ejs %>
      <h1>Edit Wiki</h1>
      <form action="/wikis/<%= wiki.id %>/update" method="post">
        <div class="form-group">
          <label for="title">Wiki title</label>
          <input type="text" class="form-control" name="title" aria-describedby="titleHelp" value="<%= wiki.title %>">
            <small class="text-muted" id="titleHelp">title must be 5 or more characters in length</small>
        </div>
        <div class="form-group">
          <label for="body">Start writing...</label>
          <textarea rows="4" class="form-control" name="body"><%= wiki.body %></textarea>
            <small class="text-muted" id="bodyHelp"></small>
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
      </form><br />
      <a href="/wikis/<%= wiki.id %>" class="btn btn-danger">Cancel</a>
    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>